{
  "name": "koa-archetype",
  "version": "1.0.0",
  "description": "Koa.JS Archetype",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "build": "tsc",
    "dev": "NODE_ENV=development nodemon",
    "dev:js": "NODE_ENV=development tsc-watch --onSuccess \"node dist/server.js\" ",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:unit": "mocha -r ts-node/register test/unit/**/*.spec.ts",
    "test:integration": "mocha -r ts-node/register test/integration/**/*.spec.ts",
    "coverage": "nyc npm run test",
    "coverage:report": "nyc report --reporter=lcov --reporter=html"
  },
  "author": "Nicolas Balduzzi",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/boom": "^7.3.0",
    "@types/chai": "^4.2.16",
    "@types/koa": "^2.13.1",
    "@types/koa-basic-auth": "^2.0.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.1",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa2-cors": "^2.0.1",
    "@types/mocha": "^8.2.2",
    "@types/nock": "^11.1.0",
    "@types/node-fetch": "^2.5.10",
    "@types/sinon": "^10.0.0",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "mongodb-memory-server": "^6.9.6",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "semantic-release": "^17.4.2",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "boom": "^7.3.0",
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-jwt": "^4.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6",
    "mongoose": "^5.12.3",
    "node-fetch": "^2.6.1",
    "typescript-ioc": "^3.2.2",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "scope": "no-release",
            "release": false
          },
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "refactor",
            "scope": "core-*",
            "release": "minor"
          },
          {
            "type": "*",
            "release": "patch"
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/github"
  ],
  "release": {
    "branches": [
      "master",
      "next"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
